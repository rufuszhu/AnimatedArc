<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<com.example.rzhu.animatedarc.AnimateArcView
		android:id="@+id/arc_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/highlight_arc_height" />

	<LinearLayout
		android:id="@+id/group_highlight_score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="12dp"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:id="@+id/score"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/highlight_loading_blue"
			android:textSize="30dp"
			tools:text="8.60X" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="more popular"
			android:textColor="@color/highlight_loading_blue"
			android:textSize="16dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/group_loading_dots"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/dot_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha=".5"
			android:src="@drawable/circle_blue" />

		<ImageView
			android:id="@+id/dot_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:alpha=".5"
			android:src="@drawable/circle_blue" />

		<ImageView
			android:id="@+id/dot_3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha=".5"
			android:src="@drawable/circle_blue" />

	</LinearLayout>

</merge>